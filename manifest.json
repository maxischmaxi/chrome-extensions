{
  "manifest_version": 3,
  "name": "Tab Mover",
  "version": "1.0",
  "description": "Moves Tabs with Shortcuts",
  "permissions": ["scripting", "activeTab", "commands"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["global.css"]
    }
  ],
  "commands": {
    "open-dispatcher": {
      "suggested_key": {
        "default": "MacCtrl+Space"
      },
      "description": "Open Hotkey Dispatcher"
    }
  }
}
